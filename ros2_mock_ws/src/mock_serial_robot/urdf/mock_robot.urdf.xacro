<?xml version="1.0"?>
<robot name="mock_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="base"/>

  <joint name="joint1" type="continuous">
    <parent link="base"/>
    <child link="link1"/>
  </joint>

  <link name="link1"/>

  <!-- ros2_control -->
  <ros2_control name="MockSystem" type="system">
    <hardware>
      <plugin>mock_serial_robot::MockSystem</plugin>
    </hardware>

    <joint name="joint1">
      <command_interface name="position"/>
      <state_interface name="position"/>
    </joint>
  </ros2_control>

</robot>
